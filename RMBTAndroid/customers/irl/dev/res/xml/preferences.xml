    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        
        <PreferenceCategory android:key="preference_category_test" android:title="@string/preferences_category_test" android:layout="@layout/preferences_category">
            
			<CheckBoxPreference
                android:key="ipv4_only"
                android:title="@string/preferences_ipv4_only"
                android:summary="@string/preferences_ipv4_only_sum"
                android:defaultValue="false"
                android:layout="@layout/preferences_item"/>

            <CheckBoxPreference
                android:key="anonymous_mode"
                android:title="@string/preferences_anonym_mode"
                android:summary="@string/preferences_anonym_mode_sum"
                android:defaultValue="false"
                android:layout="@layout/preferences_item" />

            <Preference
                android:key="location_settings"
                android:title="@string/preferences_location_settings"
                android:summary="@string/preferences_location_settings_sum"
                android:layout="@layout/preferences_item"
                 />

            <Preference
                android:key="language_settings"
                android:title="@string/preferences_language_settings"
                android:summary="@string/preferences_language_settings_sum"
                android:layout="@layout/preferences_item"
                />

            <CheckBoxPreference
                android:key="dont_show_menu_before_exit"
                android:title="@string/preferences_dont_show_menu_on_exit" 
                android:summary="@string/preferences_dont_show_menu_on_exit_sum"
                android:defaultValue="false"
                android:layout="@layout/preferences_item" />

            <CheckBoxPreference
                android:key="enable_qos"
                android:title="@string/preferences_enable_qos"
                android:summary="@string/preferences_enable_qos_sum"
                android:defaultValue="true"
                android:layout="@layout/preferences_item" />

            <CheckBoxPreference
                android:key="play_stupid_jingle"
                android:title="@string/preferences_play_jingle"
                android:summary="@string/preferences_play_jingle_sum"
                android:defaultValue="true"
                android:layout="@layout/preferences_item" />
        </PreferenceCategory>

    <PreferenceCategory android:key="preference_category_contract_info" android:title="@string/preferences_category_contract_info" android:layout="@layout/preferences_category">
        <EditTextPreference
            android:key="contract_info_dl_mbits"
            android:title="@string/preferences_contract_dl_mbits"
            android:summary="@string/preferences_contract_dl_mbits_sum"
            android:inputType="number"
            android:layout="@layout/preferences_item" />

        <EditTextPreference
            android:key="contract_info_ul_mbits"
            android:title="@string/preferences_contract_ul_mbits"
            android:summary="@string/preferences_contract_ul_mbits_sum"
            android:inputType="number"
            android:layout="@layout/preferences_item" />

        <EditTextPreference
            android:key="contract_info_contract_name"
            android:title="@string/preferences_contract_name"
            android:summary="@string/preferences_contract_name_sum"
            android:layout="@layout/preferences_item" />
    </PreferenceCategory>

</PreferenceScreen>
