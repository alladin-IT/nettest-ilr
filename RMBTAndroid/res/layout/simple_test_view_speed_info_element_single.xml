<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/test_view_info_list_progress_bar"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="100"
            android:progress="0"
            android:visibility="gone"/>

        <at.alladin.rmbt.android.views.AlladinTextView
            android:padding="2dp"
            android:id="@+id/test_view_info_list_image"
            android:layout_centerHorizontal="true"
            style="@style/Alladin.Result.Icon"
            android:text="@string/ifont_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:padding="2dp"
            android:id="@+id/test_view_info_list_result"
            android:layout_below="@id/test_view_info_list_image"
            android:layout_centerHorizontal="true"
            android:text="100"
            style="@style/Alladin.Result.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="2dp"
            android:layout_below="@id/test_view_info_list_result"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/test_view_info_list_title"
                style="@style/Alladin.Result.SubTitle"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/test_view_info_list_unit"
                style="@style/Alladin.Result.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>