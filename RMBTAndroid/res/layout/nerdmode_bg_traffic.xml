<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <at.alladin.rmbt.android.views.AlladinTextView
                android:id="@id/nerdmode_traffic_in_arrow_2"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ifont_traffic_in"
                style="@style/Alladin.Nerdmode.BgTraffic.Text" />
            <at.alladin.rmbt.android.views.AlladinTextView
                android:id="@id/nerdmode_traffic_in_arrow_1"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ifont_traffic_in"
                style="@style/Alladin.Nerdmode.BgTraffic.Text" />
            <at.alladin.rmbt.android.views.AlladinTextView
                android:id="@id/nerdmode_traffic_in_arrow_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ifont_traffic_in"
                style="@style/Alladin.Nerdmode.BgTraffic.Text" />

        </LinearLayout>
        <TextView
            android:id="@+id/nerdmode_bg_traffic_in"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_screen_traffic_in"
            style="@style/Alladin.Nerdmode.Title.Text" />
    </RelativeLayout>

    <View android:background="@color/app_background"
        android:layout_weight=".1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <at.alladin.rmbt.android.views.AlladinTextView
                android:id="@id/nerdmode_traffic_out_arrow_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ifont_traffic_out"
                style="@style/Alladin.Nerdmode.BgTraffic.Text" />
            <at.alladin.rmbt.android.views.AlladinTextView
                android:id="@id/nerdmode_traffic_out_arrow_1"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ifont_traffic_out"
                style="@style/Alladin.Nerdmode.BgTraffic.Text" />
            <at.alladin.rmbt.android.views.AlladinTextView
                android:id="@id/nerdmode_traffic_out_arrow_2"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ifont_traffic_out"
                style="@style/Alladin.Nerdmode.BgTraffic.Text" />
        </LinearLayout>
        <TextView
            android:id="@+id/nerdmode_bg_traffic_out"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_screen_traffic_out"
            style="@style/Alladin.Nerdmode.Title.Text" />
    </RelativeLayout>

</LinearLayout>